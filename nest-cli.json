{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "plugins": ["@nestjs/swagger"]
  },
  "generateOptions": {
    "spec": true,
    "flat": false
  },
  "projects": {
    "modules": {
      "type": "application",
      "root": "src/modules",
      "entryFile": "main",
      "sourceRoot": "src/modules",
      "compilerOptions": {
        "tsConfigPath": "tsconfig.app.json"
      }
    }
  }
}
